<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin.demo.dao.RoleMenuDao">

    <resultMap type="com.jin.demo.entity.RoleMenu" id="RoleMenuMap">
        <result property="id" column="id" jdbcType="LONG INTEGER"/>
        <result property="roleId" column="ROLE_ID" jdbcType="LONG INTEGER"/>
        <result property="menuId" column="MENU_ID" jdbcType="LONG INTEGER"/>
    </resultMap>
    
<sql id="Base_Column_List" >
        id , ROLE_ID , MENU_ID         
</sql>
    <!--查询单个-->
    <select id="queryById" resultMap="RoleMenuMap">
        select  <include refid="Base_Column_List" />
        from jin.t_role_menu
        where id = #{id}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RoleMenuMap">
        select  <include refid="Base_Column_List" />
        from jin.t_role_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and ROLE_ID = #{roleId}
            </if>
            <if test="menuId != null">
                and MENU_ID = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into jin.t_role_menu(ROLE_ID, MENU_ID)
        values (#{roleId}, #{menuId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jin.t_role_menu
        <set>
            <if test="roleId != null">
                ROLE_ID = #{roleId},
            </if>
            <if test="menuId != null">
                MENU_ID = #{menuId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jin.t_role_menu where id = #{id}
    </delete>

</mapper>