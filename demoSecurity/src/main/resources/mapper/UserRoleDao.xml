<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin.demo.dao.UserRoleDao">

    <resultMap type="com.jin.demo.entity.UserRole" id="UserRoleMap">
        <result property="userId" column="USER_ID" jdbcType="LONG INTEGER"/>
        <result property="roleId" column="ROLE_ID" jdbcType="LONG INTEGER"/>
    </resultMap>
    
<sql id="Base_Column_List" >
        USER_ID , ROLE_ID         
</sql>
    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        select  <include refid="Base_Column_List" />
        from jin.t_user_role
        where  = #{}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserRoleMap">
        select  <include refid="Base_Column_List" />
        from jin.t_user_role
        <where>
            <if test="userId != null">
                and USER_ID = #{userId}
            </if>
            <if test="roleId != null">
                and ROLE_ID = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into jin.t_user_role(USER_ID, ROLE_ID)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jin.t_user_role
        <set>
            <if test="userId != null">
                USER_ID = #{userId},
            </if>
            <if test="roleId != null">
                ROLE_ID = #{roleId},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jin.t_user_role where  = #{}
    </delete>

</mapper>