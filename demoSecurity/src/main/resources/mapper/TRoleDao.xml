<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin.demo.dao.TRoleDao">

    <resultMap type="com.jin.demo.entity.TRole" id="TRoleMap">
        <result property="roleId" column="ROLE_ID" jdbcType="LONG INTEGER"/>
        <result property="roleName" column="ROLE_NAME" jdbcType="VARCHAR"/>
        <result property="remark" column="REMARK" jdbcType="VARCHAR"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
        <result property="modifyTime" column="MODIFY_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TRoleMap">
        select
          'ROLE_ID', 'ROLE_NAME', 'REMARK', 'CREATE_TIME', 'MODIFY_TIME'
        from jin.t_role
        where ROLE_ID = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TRoleMap">
        select
          'ROLE_ID', 'ROLE_NAME', 'REMARK', 'CREATE_TIME', 'MODIFY_TIME'
        from jin.t_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TRoleMap">
        select
          'ROLE_ID', 'ROLE_NAME', 'REMARK', 'CREATE_TIME', 'MODIFY_TIME'
        from jin.t_role
        <where>
            <if test="roleId != null">
                and ROLE_ID = #{roleId}
            </if>
            <if test="roleName != null and roleName != ''">
                and ROLE_NAME = #{roleName}
            </if>
            <if test="remark != null and remark != ''">
                and REMARK = #{remark}
            </if>
            <if test="createTime != null">
                and CREATE_TIME = #{createTime}
            </if>
            <if test="modifyTime != null">
                and MODIFY_TIME = #{modifyTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into jin.t_role(ROLE_NAME, REMARK, CREATE_TIME, MODIFY_TIME)
        values (#{roleName}, #{remark}, #{createTime}, #{modifyTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jin.t_role
        <set>
            <if test="roleName != null and roleName != ''">
                ROLE_NAME = #{roleName},
            </if>
            <if test="remark != null and remark != ''">
                REMARK = #{remark},
            </if>
            <if test="createTime != null">
                CREATE_TIME = #{createTime},
            </if>
            <if test="modifyTime != null">
                MODIFY_TIME = #{modifyTime},
            </if>
        </set>
        where ROLE_ID = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jin.t_role where ROLE_ID = #{roleId}
    </delete>

</mapper>